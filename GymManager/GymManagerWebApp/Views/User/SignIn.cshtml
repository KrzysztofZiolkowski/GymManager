@model User
@inject Microsoft.AspNetCore.Identity.SignInManager<User> signInManager


@if (this.User.IsInRole("Admin"))
{
    <title>Dodawanie użytkownika</title>
    <h2>Dodawanie użytkownika</h2>

    <form asp-controller="User" asp-action="SignIn">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="FirstName" class="form-control" placeholder="Imię">
            <div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input asp-for="LastName" class="form-control" placeholder="Nazwisko">
            <div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="password" id="password1" asp-for="Password1" class="form-control" placeholder="Hasło">
            <div>
                <span asp-validation-for="Password1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="password" id="password2" asp-for="Password2" class="form-control" placeholder="Powtórz hasło">
            <div>
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon">
            <div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <p>Wybierz płeć</p>
        <div>
            <div>
                <input id="Men" asp-for="Gender" name="gender" type="radio" value="Mężczyzna">
                <label for="Men">Mężczyzna</label>
            </div>

            <div>
                <input id="Woman" asp-for="Gender" name="gender" type="radio" value="Kobieta">
                <label for="Woman">Kobieta</label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <br /><br />

        <p>Wybierz rodzaj uprawnień</p>
        <div>
            <div>
                <input id="Admin" name="Role" type="radio" value="Admin">
                <label for="Admin">Administrator</label>
            </div>
            <div>
                <input id="Client" name="Role" type="radio" value="Client">
                <label for="Client">Klient</label>
            </div>
            <div>
                <input id="Trainee" name="Role" type="radio" value="Trainee">
                <label for="Trainee">Trener</label>
            </div>
            <div>
                <input id="Reception" name="Role" type="radio" value="Reception">
                <label for="Reception">Pracownik recepcji</label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Dodaj użytkownika</button>
    </form>

    <br>
    <br>
    <tr>
        <td> @Html.ActionLink("Cofnij", "CrudUsers") <br /><br />
    </tr>
}

else
{
    <title>Rejestracja</title>
    <h2>Wypełnij poniższy formularz aby zarejestrować konto!</h2>

    <form asp-controller="User" asp-action="SignIn">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <input asp-for="FirstName" class="form-control" placeholder="Imię">
            <div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input asp-for="LastName" class="form-control" placeholder="Nazwisko">
            <div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="email" asp-for="Email" class="form-control" placeholder="Email">
            <div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="password" id="password1" asp-for="Password1" class="form-control" placeholder="Hasło">
            <div>
                <span asp-validation-for="Password1" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="password" id="password2" asp-for="Password2" class="form-control" placeholder="Powtórz hasło">
            <div>
                <span asp-validation-for="Password2" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon">
            <div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>

        <p>Wybierz płeć</p>

        <div>
            <div>
                <input id="Men" asp-for="Gender" name="gender" type="radio" value="Mężczyzna">
                <label for="Men">Mężczyzna</label>
            </div>

            <div>
                <input id="Woman" asp-for="Gender" name="gender" type="radio" value="Kobieta">
                <label for="Woman">Kobieta</label>
            </div>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Zarejestruj</button>
    </form>

    <br>
    <br>
    <tr>
        <td> @Html.ActionLink("Strona logowania", "LogIn") <br /><br />
    </tr>
}



