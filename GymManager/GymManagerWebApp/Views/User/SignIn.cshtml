@model User

@{
    ViewBag.Title = "Rejestracja";
}

<h2>Wypełnij poniższy formularz aby zarejestrować konto!</h2>

<form asp-controller="User" asp-action="PostUser">
    <div asp-validation-summary="All" class="text-danger"></div>
    
    <div class="form-group">
        <input asp-for="FirstName" class="form-control" placeholder="Imię">
        <div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input asp-for="SurName" class="form-control" placeholder="Nazwisko">
        <div>
            <span asp-validation-for="SurName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="email" asp-for="Email" class="form-control" placeholder="Email">
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input type="password" id="password1" asp-for="Password" class="form-control" placeholder="Hasło">
        <div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <input type="password" id="password2" asp-for="RepeatedPassword" class="form-control" placeholder="Powtórz hasło">
        <div>
            <span asp-validation-for="RepeatedPassword" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <input asp-for="PhoneNr" class="form-control" placeholder="Telefon">
        <div>
            <span asp-validation-for="PhoneNr" class="text-danger"></span>
        </div>
    </div>
    
    <p>Wybierz płeć</p>
    <div>
        <input type="radio" id="Mężczyzna" name="gender" value="Mężczyzna">
        <label for="Mężczyzna">Mężczyzna</label>
    </div>

    <div>
        <input type="radio" id="Kobieta" name="gender" value="Kobieta">
        <label for="Kobieta">Kobieta</label>
    </div>

    <button type="submit" class="btn btn-primary">Zarejestruj</button>
</form>



