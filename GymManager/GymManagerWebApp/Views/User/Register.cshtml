@model RegisterCustomerViewModel
@inject Microsoft.AspNetCore.Identity.SignInManager<User> signInManager

<title>Rejestracja</title>
<h2>Wypełnij poniższy formularz aby zarejestrować konto!</h2>

<form asp-controller="User" asp-action="Register" enctype="multipart/form-data">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ProfilePicture">Zdjęcie profilowe</label>
        <input asp-for="ProfilePicture" type="file" id="ProfilePicture" class="btn btn-primary" accept=".png,.jpg,.jpeg,.gif,.tif"></input>
        <div>
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">Imię</label>
        <input asp-for="FirstName" class="form-control" placeholder="Imię">
        <div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Nazwisko</label>
        <input asp-for="LastName" class="form-control" placeholder="Nazwisko">
        <div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email">Adres email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Email">
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Password1">Hasło</label>
        <input type="password" id="password1" asp-for="Password1" class="form-control" placeholder="Hasło">
        <div>
            <span asp-validation-for="Password1" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Password2">Powtórz hasło</label>
        <input type="password" id="password2" asp-for="Password2" class="form-control" placeholder="Powtórz hasło">
        <div>
            <span asp-validation-for="Password2" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Numer telefonu</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon">
        <div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <p>Wybierz płeć</p>

    <div>
        <div>
            <input id="Men" asp-for="Gender" name="gender" type="radio" value="Mężczyzna">
            <label for="Men">Mężczyzna</label>
        </div>

        <div>
            <input id="Woman" asp-for="Gender" name="gender" type="radio" value="Kobieta">
            <label for="Woman">Kobieta</label>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zarejestruj</button>
</form>

<br>
<br>
<tr>
    <td> @Html.ActionLink("Strona logowania", "LogIn") <br /><br />
</tr>
