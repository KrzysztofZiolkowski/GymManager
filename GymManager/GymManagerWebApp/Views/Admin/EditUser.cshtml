@model GymManagerWebApp.Models.Admin.EditUserViewModel

@{
    ViewBag.Title = "Edytowanie użytkownika";
}

<h2>Edycja użytkownika</h2>

<form asp-controller="Admin" asp-action="EditUser" asp-route-id="@Model.Id">

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Id">Id</label>
        <input asp-for="Id" class="form-control" placeholder="Imię" disabled>
        <div>
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CreatedAt">Data utworzenia konta</label>
        <input asp-for="CreatedAt" class="form-control" placeholder="Data utworzenia konta" disabled>
        <div>
            <span asp-validation-for="CreatedAt" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="FirstName">Imię</label>
        <input asp-for="FirstName" class="form-control" placeholder="Imię">
        <div>
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="LastName">Nazwisko</label>
        <input asp-for="LastName" class="form-control" placeholder="Nazwisko">
        <div>
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Email">Adres email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Email">
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Numer telefonu</label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="Telefon">
        <div>
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>

    <p></p>
    <p>Wybierz płeć</p>
    <div>
        <div>
            <input id="Men" asp-for="Gender" name="gender" type="radio" value="Mężczyzna">
            <label for="Men">Mężczyzna</label>
        </div>

        <div>
            <input id="Woman" asp-for="Gender" name="gender" type="radio" value="Kobieta">
            <label for="Woman">Kobieta</label>
        </div>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <p>Wybierz rodzaj uprawnień</p>
    <div>
        <div>
            <input id="Admin" name="Role" type="radio" value="Admin" asp-for="Role">
            <label for="Admin">Administrator</label>
        </div>
        <div>
            <input id="Customer" name="Role" type="radio" value="Customer" asp-for="Role">
            <label for="Customer">Klient</label>
        </div>
        <div>
            <input id="Trainee" name="Role" type="radio" value="Trainee" asp-for="Role">
            <label for="Trainee">Trener</label>
        </div>
        <div>
            <input id="Reception" name="Role" type="radio" value="Reception" asp-for="Role">
            <label for="Reception">Pracownik recepcji</label>
        </div>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Zatwierdź</button>
</form>

<br>
<br>
<tr>
    <td> @Html.ActionLink("Strona z użytkownikami", "CrudUsers") <br /><br />
</tr>





