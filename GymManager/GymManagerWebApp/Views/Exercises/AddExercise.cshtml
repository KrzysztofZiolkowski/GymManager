@model GymManagerWebApp.Models.Exercises.ExerciseViewModel

@{
    ViewData["Title"] = "AddExercises";
}

<h1>Dodaj Zajęcia</h1>

<form asp-controller="Exercise" asp-action="ConfirmAddingNewExercise" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="ExerciseName">Nazwa zajęcia</label>
        <input asp-for="ExerciseName" class="form-control" placeholder="Wpisz...">
        <div>
            <span asp-validation-for="ExerciseName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <label asp-for="ExerciseDate">Data Zajęć</label>
        <input asp-for="ExerciseDate" type="date" class="form-control" placeholder="Wpisz...">
    </div>

    <div class="form-group">
        <label asp-for="ExerciseDurationTimeInMinutes">Czas trwania w minutach</label>
        <input asp-for="ExerciseDurationTimeInMinutes" class="form-control" placeholder="Wpisz...">
        <div>
            <span asp-validation-for="ExerciseDurationTimeInMinutes" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="CoachId">Trener</label>
        <select asp-for="CoachId" class="form-control" placeholder="Wpisz...">
                @{foreach (var option in Model.CoachList)
                    {
                            <option value="@option.CoachId">@option.CoachName @option.CoachSurname</option>
                    }
                }
        </select>
    </div>


    <button type="submit" class="btn btn-primary">Dodaj Zajęcie</button>
</form>